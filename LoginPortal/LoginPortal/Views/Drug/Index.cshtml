@model LoginPortal.Models.Drug

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4 class="text-success">Check Drug availability using Drug ID or Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchDrug" asp-controller="Drug" method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p class="text-primary">
                    Search Drug By
                    <input type="radio" asp-for="SearchBy" class="ml-2" value="id" aria-label="Radio button for following text input">ID
                    <input type="radio" asp-for="SearchBy" class="ml-2" value="drugname" aria-label="Radio button for following text input">Name
                </p>
                <input asp-for="SearchString" class="form-control" />
                <span asp-validation-for="SearchString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
        <hr>
        <form asp-action="GetDrugQuantity" asp-controller="Drug" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="text-primary"> Check Drug Availability By Location</p>
            <div class="form-group">
                <label for="SearchString">Drug Name</label>
                <input asp-for="SearchString" class="form-control" />
                <span asp-validation-for="SearchString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Location">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
        <h2 class="text-success">@ViewBag.Message</h2>
    </div>
</div>


